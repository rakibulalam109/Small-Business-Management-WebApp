@model Signature.Models.PurchaseViewModel
@{
    ViewBag.Title = "ShowPurchaseDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@section MyStyle
{
    <style>
        table {
            font-family: arial, sans-serif;
            border-collapse: collapse;
            width: 100%;
        }

        td, th {
            border: 1px solid #dddddd;
            text-align: left;
            padding: 8px;
        }

        tr:nth-child(even) {
            background-color: #dddddd;
        }
    </style>
}

<h2>Purchase Information</h2>

<table>
    <tr>
        <td>Sl</td>
        <td>Date</td>
        <td>Bill No</td>
        <td>Supplier</td>



    </tr>
    
    <tr>
        <td>1</td>
        <td>@Model.PurchasesDetailses[0].Purchases.Date</td>
        <td>@Model.PurchasesDetailses[0].Purchases.Bill</td>
        <td>@Model.PurchasesDetailses[0].Purchases.Supplier.Name</td>
        
     



    </tr>
</table>



<h2>Details Information</h2>

<table>
    <tr>
        <td>Sl</td>
        <td>Product</td>
        <td>Category</td>
        <td>Quantity</td>
        <td>Unit Price</td>
        <td>Total Price</td>



    </tr>

    @{int i = 1;}
    @foreach (var purchase in Model.PurchasesDetailses)
    {
        <tr>
            <td>@(i++)</td>
            <td>@purchase.Product.Name</td>
            <td>@purchase.Product.Category.Name</td>
            <td>@purchase.Quantity</td>
            <td>@purchase.UnitPrice</td>
            <td>@(purchase.Quantity * purchase.UnitPrice)</td>



        </tr>
    }
</table>