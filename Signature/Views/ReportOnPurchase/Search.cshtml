@section MyStyle
{
    <style>
        table {
            font-family: arial, sans-serif;
            border-collapse: collapse;
            width: 100%;
        }

        td, th {
            border: 1px solid #dddddd;
            text-align: left;
            padding: 8px;
        }

        tr:nth-child(even) {
            background-color: #dddddd;
        }
    </style>
}
<div class="container-fluid">
    <form method="post">
        <div class="row">
            <div class="col-md-6">
                <label>Start Date:</label>
                <input type="date" id="StartDate" name="StartDate" />
            </div>
            <div class="col-md-6">
                <label>End Date:</label>
                <input type="date" id="EndDate" name="EndDate" />
                <br />
                <input type="submit" id="Search" value="Search" />
            </div>
        </div>
        <div class="row">
            <table>
                <thead>
                    <tr>
                        <th>SL</th>
                        <th>Code</th>
                        <th>Name</th>
                        <th>Category</th>
                        <th>Available Quantity</th>
                        <th>CP</th>
                        <th>MRP</th>
                        <th>Profit</th>

                    </tr>
                </thead>
                <tbody>
                    @{int sl = 1;}

                    @foreach (var RP in Model.ReportOnPurchaseViewModels)
                    {
                        <tr>
                            <td>@(sl++)</td>
                            <td>@RP.Code</td>
                            <td>@RP.Name</td>
                            <td>@RP.Category</td>
                            <td>@RP.AvailableQuantity</td>
                            <td>@(RP.CP*RP.AvailableQuantity)</td>
                            <td>@(RP.MRP*RP.AvailableQuantity)</td>
                            <td>@((RP.MRP * RP.AvailableQuantity)-(RP.CP*RP.AvailableQuantity))</td>
                        </tr>
                    }


                </tbody>
            </table>

        </div>
    </form>

</div>

@*</body>*@

